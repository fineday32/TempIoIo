
<%= simple_form_for @new_speaker, :role=>"form", :url => speakers_path do |f| %>
	<%= render :partial =>'speaker' , :locals=>{:f=>f} %>
<% end %>

<script>

$('#new_speaker_profile').submit(function(){
	// var  chi_name = document.getElementById("speaker_creator_chi_name");
	// alert("no value"); 
	// return false;
	if (document.getElementById("speaker_profile_chi_name").value &&
		document.getElementById("speaker_profile_eng_name").value &&
		document.getElementById("speaker_profile_acadamic_histories_attributes_0_nation").value &&
		document.getElementById("speaker_profile_acadamic_histories_attributes_0_school").value &&
		document.getElementById("speaker_profile_acadamic_histories_attributes_0_college").value &&
		document.getElementById("speaker_profile_acadamic_histories_attributes_0_department").value &&
		document.getElementById("speaker_profile_acadamic_histories_attributes_0_degree").value &&
		document.getElementById("speaker_profile_acadamic_histories_attributes_0_year").value
		)
	   
	{
		alert("Complete!!");
		return true;
		//accept 
	}
	else
	{
		var info_alert = "Enter the below value:\n";
		if (!document.getElementById("speaker_profile_chi_name").value){
			info_alert += "Chinese Name;\n";
			document.getElementById("speaker_profile_chi_name").style.borderColor="red";
		}
		else
			document.getElementById("speaker_profile_chi_name").style.borderColor="initial";

		if (!document.getElementById("speaker_profile_eng_name").value) {
			info_alert += "English Name;\n";
			document.getElementById("speaker_profile_eng_name").style.borderColor="red";
		}
		else
			document.getElementById("speaker_profile_eng_name").style.borderColor="initial";

		if (!document.getElementById("speaker_profile_acadamic_histories_attributes_0_nation").value){
			info_alert += "Country;\n";
			document.getElementById("speaker_profile_acadamic_histories_attributes_0_nation").style.borderColor="red";
		}
		else
			document.getElementById("speaker_profile_acadamic_histories_attributes_0_nation").style.borderColor="initial";

		if (!document.getElementById("speaker_profile_acadamic_histories_attributes_0_school").value){
			info_alert += "University/School;\n";
			document.getElementById("speaker_profile_acadamic_histories_attributes_0_school").style.borderColor="red";
		}
		else
			document.getElementById("speaker_profile_acadamic_histories_attributes_0_school").style.borderColor="initial";

		if (!document.getElementById("speaker_profile_acadamic_histories_attributes_0_college").value){
			info_alert += "College;\n";
			document.getElementById("speaker_profile_acadamic_histories_attributes_0_college").style.borderColor="red";
		}
		else
			document.getElementById("speaker_profile_acadamic_histories_attributes_0_college").style.borderColor="initial";

		if (!document.getElementById("speaker_profile_acadamic_histories_attributes_0_department").value){
			info_alert += "Department;\n";
			document.getElementById("speaker_profile_acadamic_histories_attributes_0_department").style.borderColor="red";
		}
		else
			document.getElementById("speaker_profile_acadamic_histories_attributes_0_department").style.borderColor="initial";

		if (!document.getElementById("speaker_profile_acadamic_histories_attributes_0_degree").value){
			info_alert += "Degree;\n";
			document.getElementById("speaker_profile_acadamic_histories_attributes_0_degree").style.borderColor="red";
		}
		else
			document.getElementById("speaker_profile_acadamic_histories_attributes_0_degree").style.borderColor="initial";

		if (!document.getElementById("speaker_profile_acadamic_histories_attributes_0_year").value){
			info_alert += "Year;\n";
			document.getElementById("speaker_profile_acadamic_histories_attributes_0_year").style.borderColor="red";
		}
		else
			document.getElementById("speaker_profile_acadamic_histories_attributes_0_year").style.borderColor="initial";
		alert(info_alert);
		return false;
		//reject
	}
	// return false;
});
  
</script>
